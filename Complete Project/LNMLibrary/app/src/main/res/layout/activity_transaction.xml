<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kartikexample.lnmlibrary.TransactionActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <TextView
            android:layout_marginRight="40dp"
            android:id="@+id/th_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/th_Username"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/th_useridtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <TextView
            android:id="@+id/th_usercategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="@string/th_UserCategory"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/th_usercategorytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAppearance="?android:attr/textAppearanceLarge"
            />
    </LinearLayout>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:name="com.kartikexample.lnmlibrary.TransactionListFragment"
        android:id="@+id/fragment2"

        android:layout_marginTop="152dp" />
</LinearLayout>
</ScrollView>
